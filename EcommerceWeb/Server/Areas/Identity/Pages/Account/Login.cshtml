@page
@model LoginModel

@{
    ViewData["Title"] = "Customer Login";
}

<h1>@ViewData["CUSTOMER LOGIN"]</h1>
<div class="row">
    <div class="col-md-12">
        <section>
            <form id="account" method="post">
                <h2>CUSTOMER LOGIN</h2>
                <p>REGISTERED CUSTOMERS</p>
                <hr />
                <p>If you have an account, sign in with your email address.</p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <hr style="width:0%;text-align:left;margin-left:0">
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <hr style="width:0%;text-align:left;margin-left:0">
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="d-flex align-items-center justify-content-start pb-4">
                    <button id="login-submit" type="submit" class="w-30 btn btn-lg btn-primary">Sign in</button>
                    <p class="offset-1">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
                <div class="d-flex align-items-center justify-content-start pb-4">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary">Create an Account</a>
                  </div>
@*                <div>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>*@
            </form>
        </section>
    </div>
