@page "/ItemDetail"

<TopBar/>
<hr style="width:0%;text-align:left;margin-left:0"> 
<MudContainer Class="mt-16" MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Detail</MudText>
    <MudGrid Spacing="6" Class="mt-16">
        <MudItem xs="7">
            <MudText Typo="Typo.h5" GutterBottom="true">
                Name Item
            </MudText>
            <MudGrid>
                <MudItem xs="12">
                    <img src="Image/aa.jpg" alt="..."style="height:500px; width:500px;">
                </MudItem>
                <MudItem xs="12" Class="d-flex">
                    <MudLink Href="#">
                    <MudButton Class="justify-start">
                        <img src="Image/bb.jpg" alt="..."style="height:150px; width:150px;">
                    </MudButton>
                    </MudLink>
                    <MudLink Href="#">
                    <MudButton Class="justify-center">
                        <img src="Image/cc.jpg" alt="..."style="height:150px; width:150px;">
                    </MudButton>
                    </MudLink>
                    <MudLink Href="#">
                    <MudButton Class="justify-end">
                        <img src="Image/dd.jpg" alt="..."style="height:150px; width:150px;">
                    </MudButton>
                    </MudLink>
                </MudItem>
            </MudGrid>
        </MudItem>
        <MudItem xs="5">
            <MudPaper Class="d-flex flex-column" Style="height:100%;" Elevation="0" >
                <MudList Clickable="true">
                    <hr style="width:0%;text-align:left;margin-left:0">
                    <hr style="width:0%;text-align:left;margin-left:0">
                    <hr style="width:0%;text-align:left;margin-left:0">
                    <MudListItem Class="ms-1">
                        <div class="d-flex">
                            <MudText>Condition A+</MudText> 
                        </div>
                    </MudListItem>
                    <MudDivider />
                    <MudListItem Class="ms-1">
                        <div class="d-flex">
                            <MudText>Condition A</MudText>
                        </div>
                    </MudListItem>
                    <MudDivider />
                    <MudListItem Class="ms-1">
                        <div class="d-flex">
                            <MudText>Condition B</MudText>
                        </div>
                    </MudListItem>
                    <MudDivider />
                    <MudListItem Class="ms-1">
                        <div class="d-flex">
                            <MudText>Condition B+</MudText> 
                        </div>
                    </MudListItem>
                    <MudDivider />
                    <MudListItem Class="ms-1">
                        <div class="d-flex">
                            <MudText>Condition C+</MudText> 
                        </div>
                    </MudListItem>
                    <MudDivider />
                    <MudListItem Class="ms-1">
                        <div class="d-flex">
                            <MudText>Condition C</MudText> 
                        </div>
                    </MudListItem>
                    <MudDivider />
                </MudList>
                <div class="mt-auto">
                    <MudDivider />
                    <div class="d-flex pa-4">
                        <MudText>Total:</MudText>
                        <MudText Class="ml-auto"><b>@grandtotal</b></MudText>
                    </div>
                </div>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    public string TimeRemaining { get; set; } = "12h 10m 59s";
    public int spacing { get; set; } = 2;
    public string TextValue { get; set; }
    public double currentprice { get; set; } = 2000;
    public double BidTotal { get; set; } = 0;
    public double grandtotal { get; set; } = 0;
    public double userbid { get; set; }

    void Bid()
    {
        BidTotal = BidTotal + userbid;
        grandtotal = BidTotal + currentprice;
        userbid = 0;

    }
}