@page
@model LoginModel

@{
    ViewData["Title"] = "Customer Login";
}

<h1>@ViewData["CUSTOMER LOGIN"]</h1>

<section class="vh-100">    
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        @*<div class="px-5 ms-xl-4">
          <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
          <span class="h1 fw-bold mb-0">Nubex</span>
        </div>*@

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <form style="width: 23rem;" id="account" method="post">

            <h3 class="fw-bold mb-3 pb-3" style="letter-spacing: 1px;">CUSTOMER LOGIN</h3>

            <div class="form-outline mb-2">
              <label asp-for="Input.Email" class="form-label"></label>
              <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
              <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-outline mb-2">
              <label asp-for="Input.Password" class="form-label"></label>
              <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" /> 
              <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="pt-1 mb-4">
              <button id="login-submit" class="btn btn-light btn-lg btn-block" type="submit" style="background-color:black; color:white;">Sign In</button>
            </div>
            <p class="small mb-5 pb-lg-2"><a class="text-muted" href="./ForgotPassword">Forgot password?</a></p>
            <p>Don't have an account? <a href="./Register" class="link-dark">Register here</a></p>

          </form>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="/image/NubexSignIn.jpg" alt="Login image" class="w-100 h-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>

